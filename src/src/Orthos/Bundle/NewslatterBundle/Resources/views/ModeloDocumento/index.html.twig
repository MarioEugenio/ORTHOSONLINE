<div class="box-shadow-white well">
    <fieldset>
        <legend>Pesquisar Modelo de Documento</legend>
        {% raw %}
        <form id="myAngularApp" class="form-inline" ng-controller="indexModeloDocumentoCtrl">
            <div class="box" style="margin-bottom: 10px;">
                <h5>Filtros para pesquisa</h5>
                <p>
                    <input type="text" ng-model="search.no_modelo" class="input-xxlarge" placeholder="Nome do modelo de documento">
                </p>
                <p class="right">
                    <button type="button" class="btn btn-primary" ng-click="pesquisar()"><li class="icon-search icon-white"></li>&nbsp;Pesquisar</button>
                    <button type="button" class="btn btn-primary" ng-click="cadastrar()"><li class="icon-user icon-white"></li>&nbsp;Cadastrar Modelo de Documento</button>
                </p>
            </div>

            <div class="clearfix">
                <table id="GridModeloDocumento" class="table table-bordered table-hover table-striped" cellspacing="0" cellpadding="0" border="0">
                    <thead>
                    <tr>
                        <th>Modelo Documento</th>
                        <th>Data Cadastro</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </form>
        {% endraw %}
    </fieldset>
</div>
<script type="text/javascript" src="{{ asset('bundles/orthosnewslatter/js/modeloDocumento.js') }}"></script>
