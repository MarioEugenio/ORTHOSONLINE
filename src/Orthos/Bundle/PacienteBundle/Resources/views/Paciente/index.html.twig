<div class="box-shadow-white well">
<fieldset>
    <legend>Pesquisar Paciente</legend>
    {% raw %}
    <form id="myAngularApp" class="form-inline" ng-controller="indexCtrl">
        <div class="box" style="margin-bottom: 10px;">
            <h5>Filtros para pesquisa</h5>
            <p>
                <input type="text" ng-model="search.no_paciente" class="input-xxlarge" placeholder="Nome do paciente">
                <input type="text" ng-model="search.ds_email" class="input-xlarge" placeholder="E-mail">
                <input type="text" ng-model="search.nu_cpf" class="input-medium cpf" placeholder="CPF">
                <input type="text" ng-model="search.nu_matricula" class="input-small" placeholder="Matrícula">
            </p>
            <p class="right">
                <button type="button" class="btn btn-primary" ng-click="pesquisar()"><li class="icon-search icon-white"></li>&nbsp;Pesquisar</button>
                <button type="button" class="btn btn-primary" ng-click="cadastrar()"><li class="icon-user icon-white"></li>&nbsp;Cadastrar Paciente</button>
            </p>
        </div>

        <div class="clearfix">
            <table id="GridPaciente" class="table table-bordered table-hover table-striped" cellspacing="0" cellpadding="0" border="0">
                <thead>
                <tr>
                    <th>Nome</th>
                    <th>Matrícula</th>
                    <th>CPF</th>
                    <th>E-mail</th>
                    <th>Telefone</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </form>
    {% endraw %}
</fieldset>
</div>
<script type="text/javascript" src="{{ asset('bundles/orthospaciente/js/index.js') }}"></script>
